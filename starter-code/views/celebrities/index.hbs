<h2>Welcome, welcome!</h2>
<div class="row">

  {{#each celebFind}}
  <div class="col-md-4">

    <div id="each-card" class="card" style="width: 18rem;">

      <div class="card-body">
        <h5 class="card-title">{{name}}</h5>

        <div id="buttons-mine">
          <a href="/celebrities/show/{{id}}" class="btn button-mine">Show me!</a>
          <a href="/celebrities/{{id}}/edit" class="btn outlined">Edit me!</a>

          <form action="/celebrities/{{id}}/delete" method="post">
            <button type="submit" class="btn erase">Borrar</button>
          </form>
        </div>

      </div>

    </div>

  </div>
  {{/each}}

</div>