<h2>Editar {{name}}</h2>

<form method="POST" action="/celebrities/{{id}}/edit">
  <div class="form-group">
    <label for="celeb-name">Name</label>
    <input name="name" type="text" class="form-control" id="celeb-name" value="{{name}}">
  </div>
  <div class="form-group">
    <label for="celeb-occupation">Occupation</label>
    <input name="occupation" type="text" class="form-control" id="celeb-occupation" value="{{occupation}}">
  </div>
  <div class="form-group">
    <label for="celeb-occupation">Catch Phrase</label>
    <input name="catchPhrase" type="text" class="form-control" id="celeb-occupation" value="{{catchPhrase}}">
  </div>
  <button type="submit" class="btn button-mine">Guardar Cambios</button>

</form>